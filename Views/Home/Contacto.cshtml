
@{
    ViewData["Title"] = "Contacto";
}
<h1>Formulario de contacto</h1>

<form asp-controller = "Home" asp-action ="Contacto">
    <div class "mb-3">
        <label for="nombre" class = "form-label">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Fulano de tal" />
    </div>
    <div class "mb-3">
        <label for="email" class = "form-label">Correo</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="correo@servidor.com" />

    </div>
    <div class ="mb-3">
        <label for = "mensaje" class= "form-label" >Mensaje</label>
        <textarea class = "form-control" id="mensaje" name="mensaje" rows = "3" placeholder="Escribe aquí tu mensaje"></textarea>
    </div>
    <button type = "submit" class = "btn-primary btn-primary">Enviar</button>
</form>